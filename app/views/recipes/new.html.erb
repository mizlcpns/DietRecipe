<div class="text-center mt-5 mb-5">
  <h1>レシピ投稿画面</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @recipe, local: true) do |f| %>
    　<%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :menu, 'レシピ名' %>
        <%= f.text_field :menu, class: 'form-control' %>
      </div>
　　
      <div class="form-group">
        <%= f.label :p, 'P' %>
        <%= f.number_field :p, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :f, 'F' %>
        <%= f.number_field :f, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :c, 'C' %>
        <%= f.number_field :c, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '作り方' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :recipe_image, 'レシピ画像' %>
        <%= f.file_field :recipe_image, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>








