<h1 class="mt-5 mb-5">ユーザー一覧</h1>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-3">
      <div class="card pt-4 mt-5">
        <% if user.image? %>
          <%= image_tag user.image.url, class: "icon card-img-top" %>
        <% else %>
          <%= image_tag "default.png", class: "icon card-img-top" %>
        <% end %>
        <div class="card-body pt-4">
          <h4 class="card-title"><%= user.name %></h4>
          <%= link_to "プロフィール", user_path(user), class: "btn btn-primary mt-3" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

